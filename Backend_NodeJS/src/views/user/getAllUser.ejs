<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>get User</title>
     <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.4/dist/jquery.slim.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
     <div className="container">
        
        <div className="row">
            <div className="col-12">
                <h1 className="text-center my-4">Lấy thông tin User</h1>
            </div>
            <div className="col-12">
             <table className="table table-hover">
                <thead>
                  <tr className="bg-primary">
                    <th scope="col">#</th>
                    <th scope="col">Email</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>

                  <% for(var i=0; i < dataTable.length; i++) { %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td><%= dataTable[i].email %></td>
                      <td><%= dataTable[i].firstName%></td>
                      <td><%= dataTable[i].lastName%></td>
                      <td><%= dataTable[i].phoneNumber%></td>
                      <td><%= dataTable[i].address%></td>
                      <!-- <td><%= dataTable[i].gender%></td> -->
                     <td><% if(dataTable[i].gender == 1){ %>
                        <p>Nam</p>
                      <% } else{ %>  
                        <p>Nữ</p>
                     <% } %></td>
                     <td>
                        <a href="/user/edit-user?id=<%= dataTable[i].id %>" type="button" className="btn-success btn btn-edit">Sửa</a>
                        <a href="/user/delete-user?id=<%= dataTable[i].id %>" type="button" className=" btn-danger btn btn-delete">Xóa</a>
                     </td>
                    </tr>
                 <% } %>
                  
                </tbody>
              </table>   
            </div>
            
        </div>
     </div>
</body>
</html>